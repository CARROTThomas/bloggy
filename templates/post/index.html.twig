{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}


    <div class="container m-5 pt-5 pb-5">
        <h1>voici les posts</h1>
        {% for post in posts %}
            <div class="border border-dark rounded m-5 d-flex justify-content-between">
                <div class="ms-4 p-3">
                    <h3>{{ post.title }}</h3>
                    <p>{{ post.content }}</p>
                    <p><strong>{{ post.createdAt | date("d/m/Y - H/s") }}</strong></p>
                </div>
                <div class="d-flex flex-column p-3">
                    <a href="{{ path('delete_post', {id:post.id}) }}" class="btn btn-danger m-1">delete</a>
                    <a href="{{ path('show_post',{id:post.id}) }}" class="btn btn-primary m-1">show</a>
                    <a href="{{ path('edit_post', {id:post.id}) }}" class="btn btn-warning m-1">update</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
